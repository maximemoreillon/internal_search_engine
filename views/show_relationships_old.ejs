<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/head %>

    <link rel="stylesheet" href="css/relationships.css">

  </head>
  <body>

    <div class="wrapper">
      <div class="header">
        <% include partials/header %>
      </div>
      <div class="main">

        <% include partials/search_bar %>


        <!-- The selected node -->
        <div class="record_container <%= records[0]._fields[0].labels[0] %>">
          <div class="label_container">
            <%= records[0]._fields[0].labels[0] %>
          </div>

          <div class="properties_container">
            <table>
            <% properties = records[0]._fields[0].properties
              for(key in properties) { %>
                <tr>
                  <td><%= key %></td>
                  <td><%= properties[key] %></td>
                </tr>
            <% } %>
            </table>

          </div>
        </div>

        <!-- Show the node's relationships with others -->
        <%
        for(var record_index=0; record_index<records.length; record_index++){
          %>

          <div class="related_record_container">
            <div class="relationship_container">
              <div class="relationship_container_inner">
                <%= records[record_index]._fields[1].type %>
              </div>
            </div>

            <div class="record_container <%= records[record_index]._fields[2].labels[0] %>">
              <div class="label_container">
                <%= records[record_index]._fields[2].labels[0] %>
              </div>

              <div class="properties_container">
                <table>
                <% properties = records[record_index]._fields[2].properties
                  for(key in properties) { %>
                    <tr>
                      <td><%= key %></td>
                      <td><%= properties[key] %></td>
                    </tr>
                <% } %>
                </table>
              </div>

              <form class="" action="show_relationships" method="get">
                <input type="hidden" name="id" value="<%= records[record_index]._fields[2].identity.low %>">
                <input type="submit" value="Show relationships">
              </form>
            </div>


          </div>

        <% } %>

      </div>
      <div class="footer">
        <% include partials/footer %>
      </div>
    </div>

    <script type="text/javascript">

    var records = JSON.parse('<%- JSON.stringify(records) %>')
    console.log(records)
    </script>




  </body>
</html>
